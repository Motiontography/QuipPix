# QuipPix Backend Environment Variables
# Copy to .env and fill in production values

# Server
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Database
DATABASE_PATH=./data/quippix.db

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# REDIS_PASSWORD=

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=quippix-temp
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# Storage
STORAGE_TTL_SECONDS=3600
SIGNED_URL_EXPIRY_SECONDS=900

# Image Engine (OpenAI)
IMAGE_ENGINE_API_KEY=sk-your-api-key
IMAGE_ENGINE_BASE_URL=https://api.openai.com/v1
IMAGE_ENGINE_MODEL=gpt-5.2
IMAGE_ENGINE_TIMEOUT_MS=120000

# Rate Limiting
RATE_LIMIT_MAX=30
RATE_LIMIT_WINDOW_MS=60000
PER_USER_RATE_LIMIT_FREE=10
PER_USER_RATE_LIMIT_PRO=30
PER_USER_RATE_LIMIT_WINDOW=60

# Free Tier
FREE_DAILY_GENERATION_LIMIT=5
FREE_COOLDOWN_MINUTES=30

# JWT Authentication
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=30d

# Admin
ADMIN_API_KEY=change-me-in-production

# Firebase (Push Notifications)
FIREBASE_ENABLED=false
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Sentry (Error Monitoring)
SENTRY_ENABLED=false
# SENTRY_DSN=https://your-dsn@sentry.io/project-id

# RevenueCat (In-App Purchases)
REVENUECAT_API_KEY=sk_placeholder
REVENUECAT_WEBHOOK_SECRET=whsec_placeholder
REVENUECAT_ENTITLEMENT_ID=pro

# Moderation
MODERATION_ENABLED=true

# Batch Processing
BATCH_MAX_SIZE=10

# Challenge
CHALLENGE_POOL_SIZE=90

# Remix
REMIX_CODE_TTL_DAYS=90
REMIX_CODE_LENGTH=8
