{
  "name": "quippix",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/mobile"
  ],
  "scripts": {
    "backend:dev": "npm run dev --workspace=@quippix/backend",
    "backend:build": "npm run build --workspace=@quippix/backend",
    "backend:start": "npm run start --workspace=@quippix/backend",
    "backend:test": "npm test --workspace=@quippix/backend",
    "mobile:start": "npm run start --workspace=@quippix/mobile",
    "mobile:ios": "npm run ios --workspace=@quippix/mobile",
    "mobile:android": "npm run android --workspace=@quippix/mobile",
    "mobile:test": "npm test --workspace=@quippix/mobile",
    "test": "npm run backend:test && npm run mobile:test",
    "lint": "eslint packages/*/src --ext .ts,.tsx"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "ws": "^7.5.10"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@react-native-clipboard/clipboard": "^1.16.3"
  }
}
