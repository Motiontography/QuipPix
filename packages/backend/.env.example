# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# ChatGPT 5.2 Image Mode â€” Image Engine
# Obtain from your OpenAI dashboard
IMAGE_ENGINE_API_KEY=sk-your-key-here
IMAGE_ENGINE_BASE_URL=https://api.openai.com/v1
IMAGE_ENGINE_MODEL=gpt-5.2
IMAGE_ENGINE_TIMEOUT_MS=120000

# Redis (for BullMQ job queue)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# S3-compatible storage (temporary uploads/results)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=quippix-temp
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# TTL for temporary storage (seconds)
STORAGE_TTL_SECONDS=3600

# Signed URL expiry (seconds)
SIGNED_URL_EXPIRY_SECONDS=900

# Rate limiting
RATE_LIMIT_MAX=30
RATE_LIMIT_WINDOW_MS=60000

# Moderation
MODERATION_ENABLED=true

# Free tier limits
FREE_DAILY_GENERATION_LIMIT=5
FREE_COOLDOWN_MINUTES=30
