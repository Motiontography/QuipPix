# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

# Monorepo: node_modules are hoisted to root.
# use_react_native! requires a RELATIVE path from the Podfile's directory.
node_modules_rel = '../node_modules'
node_modules_abs = File.expand_path(node_modules_rel, __dir__)
unless File.exist?(File.join(node_modules_abs, 'react-native'))
  node_modules_rel = '../../../node_modules'
  node_modules_abs = File.expand_path(node_modules_rel, __dir__)
end
rn_path_rel = "#{node_modules_rel}/react-native"

target 'QuipPix' do
  # Monorepo: use_native_modules! broken with npm workspaces hoisting
  # Manually specify react-native path and native modules
  use_react_native!(
    :path => rn_path_rel,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Native modules (manually listed since autolinking can't find hoisted packages)
  pod 'RNCAsyncStorage', :path => "#{node_modules_rel}/@react-native-async-storage/async-storage"
  pod 'RNCClipboard', :path => "#{node_modules_rel}/@react-native-clipboard/clipboard"
  pod 'react-native-cameraroll', :path => "#{node_modules_rel}/@react-native-camera-roll/camera-roll"
  pod 'react-native-netinfo', :path => "#{node_modules_rel}/@react-native-community/netinfo"
  pod 'react-native-slider', :path => "#{node_modules_rel}/@react-native-community/slider"
  pod 'RNFBApp', :path => "#{node_modules_rel}/@react-native-firebase/app"
  pod 'RNFBMessaging', :path => "#{node_modules_rel}/@react-native-firebase/messaging"
  pod 'react-native-biometrics', :path => "#{node_modules_rel}/react-native-biometrics"
  pod 'react-native-compressor', :path => "#{node_modules_rel}/react-native-compressor"
  pod 'RNFastImage', :path => "#{node_modules_rel}/react-native-fast-image"
  pod 'RNFS', :path => "#{node_modules_rel}/react-native-fs"
  pod 'RNReactNativeHapticFeedback', :path => "#{node_modules_rel}/react-native-haptic-feedback"
  pod 'react-native-image-picker', :path => "#{node_modules_rel}/react-native-image-picker"
  pod 'react-native-in-app-review', :path => "#{node_modules_rel}/react-native-in-app-review"
  pod 'BVLinearGradient', :path => "#{node_modules_rel}/react-native-linear-gradient"
  pod 'RNPurchases', :path => "#{node_modules_rel}/react-native-purchases"
  pod 'react-native-safe-area-context', :path => "#{node_modules_rel}/react-native-safe-area-context"
  pod 'RNScreens', :path => "#{node_modules_rel}/react-native-screens"
  pod 'RNShare', :path => "#{node_modules_rel}/react-native-share"
  pod 'RNSVG', :path => "#{node_modules_rel}/react-native-svg"
  pod 'react-native-view-shot', :path => "#{node_modules_rel}/react-native-view-shot"

  # Firebase (modular_headers required for Swift interop with static libs)
  pod 'Firebase/Core', :modular_headers => true
  pod 'Firebase/Messaging', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseCoreInternal', :modular_headers => true
  pod 'FirebaseInstallations', :modular_headers => true
  pod 'GoogleUtilities', :modular_headers => true
  pod 'GoogleDataTransport', :modular_headers => true
  pod 'nanopb', :modular_headers => true
  pod 'FirebaseCoreExtension', :modular_headers => true

  target 'QuipPixTests' do
    inherit! :complete
  end

  post_install do |installer|
    react_native_post_install(
      installer,
      rn_path_rel,
      :mac_catalyst_enabled => false
    )

    # Fix PurchasesHybridCommon Swift 6 ambiguity on Xcode 26
    installer.pods_project.targets.each do |target|
      if target.name == 'PurchasesHybridCommon'
        target.build_configurations.each do |config|
          config.build_settings['SWIFT_VERSION'] = '5.0'
          config.build_settings['SWIFT_UPCOMING_FEATURE_MEMBER_IMPORT_VISIBILITY'] = 'NO'
        end
      end
    end
  end
end
