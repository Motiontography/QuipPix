default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    ensure_git_status_clean

    increment_build_number(
      xcodeproj: "QuipPix.xcodeproj"
    )

    match(type: "appstore")

    build_app(
      workspace: "QuipPix.xcworkspace",
      scheme: "QuipPix",
      export_method: "app-store",
      clean: true
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )

    commit_version_bump(
      message: "chore(ios): bump build number for TestFlight",
      xcodeproj: "QuipPix.xcodeproj"
    )
  end

  desc "Push a new release to the App Store"
  lane :release do
    ensure_git_status_clean

    increment_build_number(
      xcodeproj: "QuipPix.xcodeproj"
    )

    match(type: "appstore")

    build_app(
      workspace: "QuipPix.xcworkspace",
      scheme: "QuipPix",
      export_method: "app-store",
      clean: true
    )

    upload_to_app_store(
      force: true,
      skip_metadata: false,
      skip_screenshots: true,
      submit_for_review: false
    )

    commit_version_bump(
      message: "chore(ios): bump build number for App Store release",
      xcodeproj: "QuipPix.xcodeproj"
    )
  end

  desc "Capture screenshots for App Store"
  lane :screenshots do
    capture_screenshots(
      scheme: "QuipPixUITests",
      output_directory: "./fastlane/screenshots",
      clear_previous_screenshots: true,
      override_status_bar: true
    )
    frame_screenshots(path: "./fastlane/screenshots")
  end
end
